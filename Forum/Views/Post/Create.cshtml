@model ForumWZ.Models.Post.NewPostModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            New Post | @Model.ForumName
            <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl); background-size:100%"></div>
            <span id="headingBtn"><a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Wróć do @Model.ForumName</a></span>
        </div>
    </div>
    @if (!Context.User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div id="forumIndexContent">
                <div class="register">Musisz być <a asp-controller="Account" asp-action="Register">zarejestrowanym członkiem</a> by stworzyć nowy post.</div>
            </div>
        </div>
    }
    @if (Context.User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="createPostSection">
                <div class="authorBlock">
                    Dodajesz post jako <strong class="authorBlockName">@Model.AuthorName</strong>
                </div>

                <form asp-action="AddPost" method="post" id="AddPostForm">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" style="color: black"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                    </div>
                    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Dodaj Post</button>
                    <input asp-for="ForumId" type="hidden">
                </form>
            </div>
        </div>
    }
</div>