@using Microsoft.AspNetCore.Identity
@model ForumWZ.Models.ApplicationUser.ProfileModel

@inject UserManager<ForumWZ.Data.Models.ApplicationUser> UserManager

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Profil użytkownika
        </div>
    </div>
    <div class="row userProfile">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image: url(@Model.ProfileImageUrl)"></div>
            @if (User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                    <div id="upload">
                        <label class="btn btn-default btn-file">
                            Przeglądaj <input type="file" name="file" style="display: none" />
                        </label>
                    </div>
                    <button type="submit" id="btn-profile" class="btn btn-default">
                        Dodaj
                    </button>
                </form>
            }
        </div>
        <div class="col-md-8">
            <span id="userName">
                @Model.UserName
            </span>
            @if (Model.IsAdmin)
            {
                <span class="isAdmin">
                    Admin
                </span>
            }
            <span id="userRating">Punkty: @Model.UserRating</span>
            <span id="userEmailLabel">Email: @Model.Email</span>
            <span id="userCreatedLabel">Członek od: @Model.MemberSince</span>
        </div>
    </div>
    
</div>